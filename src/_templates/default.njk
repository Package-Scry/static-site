<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
      {{ renderData.title }}
    </title>

    <script>
      document.addEventListener("DOMContentLoaded", function(){
      const elNav = document.querySelector("nav")
      const elMobileMenu = document.querySelector("#mobile-menu")
      const elMenu = document.querySelector("#menu-container")

      window.addEventListener('resize', () => {
        const width = window.innerWidth
        const height = window.innerHeight

        if (width < 600) {
          elMenu.style.display = "none"
          elMobileMenu.style.display = "inline-block"
        } else {
          elMenu.style.display = "block"
          elMobileMenu.style.display = "none"         
        }
      });

        elMobileMenu.addEventListener("click", () => {
          elMenu.style.display === "block" ? elMenu.style.display = "none" : elMenu.style.display = "block"
          console.log(elNav.className)
          elNav.className = elNav.className?.includes("active") ? "" : `active`
        })
      })
      </script>

    <style type="text/css">
      body {
        background: linear-gradient(179.15deg, #0D262A 0.73%, #143F4A 22.09%, rgba(31, 125, 131, 0.873478) 50.87%, #1D787E 60.42%), #041D22 !important;
        color: white;
        margin: 0;
        width: 100%;
        font-size: 1em;
        font-family: Bitter;
      }

      a, a:hover, a:visited, a:active {
        text-decoration: none;
        color: white;
      }

      ul {
            padding-inline-start: 0;
      }

      nav {
        text-align: right;
        margin-bottom: 60px;
        font-size: 1.2em;
      }
      #menu-container {
        display: inline-block;
        list-style: none;
        margin-right: 4px;
      }
      #menu-container li {
        display: inline;
        padding: 4px 8px;
      }
      #menu-container li:hover {
        text-decoration: underline;
        cursor: pointer;
      }

      #mobile-menu {
        display: none;
      }

      @media screen and (max-width: 1200px) {
        nav {
          text-align: center;
        }
      }
      @media screen and (max-width: 600px) {
        nav {
          text-align: right;
          user-select: none;
        }
        .active {
          text-align: center;
          background: #477e9e;
          width: 100%;
          height: 100vh;
          position: fixed;
          z-index: 1000;
        }
        #menu-container {
          display: none;
          margin: 0;
        }
        #mobile-menu::after {
          content: "â˜°"
        }
        .active #mobile-menu::after {
          content: "CLOSE"
        }
        #mobile-menu {
          display: inline-block;
          padding: 1em;
          cursor: pointer;
          background: #477e9e;
        }
        .active #mobile-menu {
          border-bottom: 1px solid black;
          width: 100%;
          padding: 1em 0;
          margin-bottom: 0.5em;
        }
        #menu-container li {
          display: block;
          padding: 4px 0;
          font-size: 2em;
        }
      }

      #first-view-container {
        display: grid;
        width: 1200px;
        max-width: 80vw;
        grid-template-columns: 1fr 3fr;
        column-gap: 40px;
        margin: 0 auto;
      }
      #first-view-side {
        display: grid;
        grid-template-rows: auto auto 1fr;
        align-content: center;
        justify-items: center;
        margin: 1.5em 0;
      }
      #first-view-logo img {
        max-width: 100%;
      }
      #first-view-slogen {
        line-height: normal;
        font-size: 1.5em;
        text-align: center;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.3);
        margin: 2em 0 2.5em 0;
      }
      #first-view-button-container {
        position: relative;
        width: 100%;
      }
      #first-view-button {
        width: fit-content;
        padding: 0.7em 1em;
        background: #303740;
        position: absolute;
        font-size: 1.5em;
        cursor: pointer;
        bottom: 25%;
        left: 50%;
        transform: translate(-50%);
        box-shadow: 1px 4px 4px rgba(0, 0, 0, 0.3);
        border-radius: 8px;
      }
      #first-view-button:hover {
        padding: 0.8em 1.2em;
        height: auto;
      }
      #first-view-image {
        justify-self: end;
      }
      #first-view-image img {
        max-width: 100%;
      }

      @media screen and (max-width: 1200px) {
        #first-view-container {
          width: 100%;
          max-width: 80vw;
          grid-template-columns: 1fr;
        }
        #first-view-side {
          padding-bottom: calc(4 * 1em);
        }
        #first-view-logo img {
          max-height: 150px;
        }
        #first-view-button-container {
          height: 60px;
        }
        #first-view-button {
          bottom: 0;
        }
      }

      #second-view-text {
        line-height: normal;
        font-size: 3em;
        text-align: center;
        text-shadow: 0 4px 4px rgba(0, 0, 0, 0.3);
        margin: 4em auto 2em auto;
        width: 1200px;
      }

      #second-view-container {
        display: grid;
        grid-template-columns: 1fr 2fr;
        margin: 0 auto;
        width: 1200px;
      }

      #second-view-features {
        display: grid;
        grid-template-rows: 1fr 1fr 1fr;
        align-content: center;
        justify-items: center;
        font-family: Bitter;
        line-height: normal;
        font-size: 1.25em;
        grid-row-gap: 2em;
        align-self: center;
        padding: 0 1em 0 0;
      }

      .second-view-feature {
        display: grid;
        grid-template-columns: auto 1fr;
        column-gap: 1.2vw;
        width: 100%;
      }

      .list-icon {
        align-self: center;
        line-height: 0;
        font-size: 0;
      }

      .list-icon svg {
        width: 25px;
        height: 25px;
      }

      #second-view-image {
        justify-self: end;
      }

      #second-view-image img {
        width: 100%;
        height: auto;
      }

      @media screen and (max-width: 1200px) {
        #second-view-container {
          grid-template-columns: 1fr;
          margin: 0 auto;
          max-width: 80vw;
        }
        #second-view-text {
          max-width: 80vw;
        }
        #second-view-features {
          grid-row: 2;
          align-self: center;
        }
        .second-view-feature {
          width: auto;
          grid-template-columns: auto auto;
        }
      }

      #third-view-border {
        max-width: 1200px;
        margin: 4em auto 0 auto;
        height: 1px;
        background: #0FA8B2;
        filter: blur(1px);
      }

      #third-view-container {
        width: 1200px;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: baseline;
        margin: 0 auto;
        padding: 2.5em 0;
      }

      #third-view-follows {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        row-gap: 1.5em;
        justify-self: center;
        column-gap: 1em;
        line-height: normal;
        font-size: 1.5em;
        text-align: center;
      }

      #social-header {
        font-family: Bitter;
        grid-column: 1 / span 3;
        filter: drop-shadow(0px 3px 3px rgba(0, 0, 0, 0.3));
      }

      .social-icon {
        justify-self: center;
      }

      .social-icon img {
        height: 35px;
      }

      .social-icon img:hover {
        cursor: pointer;
      }

      #third-view-separator {
        width: 1px;
        align-self: normal;
        background: #0FA8B2;
        filter: blur(1px);
      }

      #third-view-subscribe {
        display: grid;
        justify-self: center;
        row-gap: 1em;
        padding: 0 0 0 2em;
      }

      #subscribe-text {
        font-family: Bitter;
        line-height: normal;
        font-size: 1.5em;
        text-align: left;
        filter: drop-shadow(0 3px 3px rgba(0, 0, 0, 0.3));
      }

      #subscribe-input-container {
        display: grid;
        grid-template-columns: 3fr 1fr;
        column-gap: 2em;
      }

      #subscribe-input {
        border-radius: 4px;
        filter: drop-shadow(0 3px 3px rgba(0, 0, 0, 0.3));
        font-size: 1.2em;
        border: none;
        outline: none;
      }

      #subscribe-input:focus {
        outline: none;
      }

      #subscribe-button {
        font-family: Bitter;
        cursor: pointer;
        background: #128CB4;
        border-radius: 4px;
        padding: 0.5em 1em;
        font-size: 1.5em;
        box-shadow: 0 3px 3px  rgba(0, 0, 0, 0.3);
        text-shadow: 0 3px 3px  rgba(0, 0, 0, 0.4);
        text-align: center;
      }

      #subscribe-button:hover {
        background: #027CB4;
      }

      #subscribe-checkbox-container {
        display: grid;
        grid-template-columns: auto 1fr;
        font-size: 1em;
        column-gap: 0.5em;
        align-items: center;
        text-shadow: 0 3px 3px rgba(0, 0, 0, 0.4);
      }

      @media screen and (max-width: 1200px) {
        #third-view-border {
          max-width: 80vw;
        }
        #third-view-container {
          max-width: 80vw;
          width: auto;
          grid-template-columns: 1fr;
        }
        #third-view-separator {
          max-width: 80vw;
          height: 1px;
          width: 100%;
          margin: 1em 0;
        }
        #third-view-subscribe {
          padding: 0;
        }
      }
      @media screen and (max-width: 750px) {
        #subscribe-input-container {
          grid-template-columns: 1fr;
          row-gap: 2em;
        }
        #subscribe-input {
          padding: 1em 2px;
        }
      }
    </style>
  </head>

  <body>
  
    <nav>
      <div id="mobile-menu"></div>
      <ul id="menu-container">
        <li><a href="/">Home</a></li>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/download">Download</a></li>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>

    {{ content | safe }}
  </body>
</html>