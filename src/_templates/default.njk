<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
      {{ title }}
    </title>

    <script>
      document.addEventListener("DOMContentLoaded", function(){
      const elNav = document.querySelector("nav")
      const elMobileMenu = document.querySelector("#mobile-menu")
      const elMenu = document.querySelector("#menu-container")

        window.addEventListener('resize', () => {
          const width = window.innerWidth
          const height = window.innerHeight

          if (width < 600) {
            elMenu.style.display = "none"
            elMobileMenu.style.display = "inline-block"
            elNav.className = ""
          } else {
            elMenu.style.display = "block"
            elMobileMenu.style.display = "none"
            elNav.className = ""
          }
        });

        elMobileMenu.addEventListener("click", () => {
          elMenu.style.display === "block" ? elMenu.style.display = "none" : elMenu.style.display = "block"
          console.log(elNav.className)
          elNav.className = elNav.className?.includes("active") ? "" : "active"
        })
      })
    </script>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Bitter" />
    <style type="text/css">
      :root {
        --default-shadow: 0 3px 3px rgba(0, 0, 0, 0.3);
        --default-radius: 4px;
        --button-radius: 10px;
        --button-shadow: 0 3px 3px rgba(0, 0, 0, 0.3);
        --button-padding: 1.25rem 2.5rem;
        --button-font-size: 1.5em;
      }
      body {
        background: linear-gradient(179.15deg, #0D262A 0.73%, #143F4A 22.09%, rgba(31, 125, 131, 0.873478) 50.87%, #1D787E 60.42%), #041D22;
        color: white;
        margin: 0;
        width: 100%;
        font-size: 1em;
        font-family: Bitter;
        box-sizing: border-box;
      }

      a, a:hover, a:visited, a:active {
        text-decoration: none;
        color: white;
      }

      ul {
        padding-inline-start: 0;
        list-style: none;
      }

      .button {
        cursor: pointer;
        border-radius: var(--button-radius);
        font-size: var(--button-font-size);
        padding: var(--button-padding);
        box-shadow: var(--button-shadow);
        text-shadow: var(--default-shadow);
        text-align: center;
        min-width: 100px;
      }

      .button.primary {
        background: #61828D;
      }
      .button:hover.primary {
        background: #4A6067;
      }
      .button.danger {
        background: #9D4040;
      }
      .button:hover.danger {
        background: #812727;
      }

      .container {
        display: grid;
        width: 1200px;
        max-width: 90vw;
        margin: 0 auto;
        padding: 0 3rem;
        box-sizing: border-box;
        background: #243B42;
        grid-template-rows: auto 1fr 82px;
      }
      .container > #header {
        display: grid;
        display: inline-block;
        grid-template-rows: 1fr auto;
        text-align: center;
      }
      .container > #header > h1 {
        margin: 0 0 1rem 0;
        font-size: 1.75em;
        filter: drop-shadow(var(--default-shadow));
        font-weight: 100;
        align-self: center;
        margin: 1.5rem 0;
      }
      .container .separator {
        background: #0FA8B2;
        filter: blur(1px);
        height: 1px;
      }
      .container > #header > .separator {
        align-self: end;
        margin-bottom: 0;
      }
      .container > #content {
        padding: 3.75rem 0;
      }

      nav {
        text-align: right;
        margin-bottom: 60px;
        font-size: 1.2em;
        user-selection: none;
      }
      #menu-container {
        display: inline-block;
        margin-right: 4px;
      }
      #menu-container li {
        display: inline;
        padding: 4px 8px;
      }
      #menu-container li:hover {
        text-decoration: underline;
        cursor: pointer;
      }
      #mobile-menu {
        display: none;
      }
      @media screen and (max-width: 1200px) {
        nav {
          text-align: center;
        }
      }
      @media screen and (max-width: 600px) {
        nav {
          text-align: right;
          user-select: none;
        }
        .active {
          text-align: center;
          background: #477e9e;
          width: 100%;
          height: 100vh;
          position: fixed;
          z-index: 1000;
        }
        #menu-container {
          display: none;
          margin: 0;
        }
        #mobile-menu::after {
          content: "☰"
        }
        .active #mobile-menu::after {
          content: "CLOSE"
        }
        #mobile-menu {
          display: inline-block;
          padding: 1em;
          cursor: pointer;
          background: #477e9e;
        }
        .active #mobile-menu {
          border-bottom: 1px solid black;
          width: 100%;
          padding: 1em 0;
          margin-bottom: 0.5em;
        }
        #menu-container li {
          display: block;
          padding: 4px 0;
          font-size: 2em;
        }
      }
      #footer-menu {
        background: #0C4C5A;
        width: 100%;
        margin-block-start: 0;
        margin-block-end: 0;
        margin-top: 3rem;
        text-align: center;
        padding: 1.5rem 0;
      }
      #footer-menu li {
        display: inline-block;
        font-size: 1.2em;
        padding: 0 .5em;
      }
      #copyright {
        margin-top: 1.5em;
      }

    .logo-container {
      margin: 0 auto;
      display: block;
      max-width: 1200px;
      text-align: center;
    }
    .logo-container img {
      width: 300px;
      max-width: 100%;
    }
    .logo-container > #slogan {
      font-size: 2em;
      margin: 1em 0 3em 0;
      text-shadow: var(--default-shadow);
    }
    </style>
    <link href="/css/menu.css" rel="stylesheet">
    <link href="/css/first-view.css" rel="stylesheet">
    <link href="/css/second-view.css" rel="stylesheet">
    <link href="/css/third-view.css" rel="stylesheet">
  </head>

  <body>
  
    <nav>
      <div id="mobile-menu"></div>
      <ul id="menu-container">
        <li><a href="/">Home</a></li>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/download">Download</a></li>
        <li><a href="/login">Login</a></li>
      </ul>
    </nav>

    {{ content | safe }}
    <div id="footer-menu">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/pricing">Pricing</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contact us</a></li>
        <li><a href="/privacy">Privacy Policy</a></li>
      </ul>
      <div id="copyright">© 2021 Package Scry</div>
    </div>
  </body>
</html>